<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ff15a3f7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/retweetState"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text=" retweeted"
            android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/oneTweetLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight=".10"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/profiePictureImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5sp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight=".80"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/statusInfoLayout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".75"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/userNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اخبار الكرة العالمية"
                            android:textSize="13sp"
                            android:gravity="left"
                            android:textColor="#fff7f2ff"
                            android:textIsSelectable="false"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/twitterNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#yosThebombastic"
                            android:textSize="10sp"
                            android:gravity="left"
                            android:textColor="#ff575665"
                            android:textIsSelectable="false"
                            android:layout_marginLeft="5sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight=".25"
                        android:layout_height="match_parent"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/timeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 minutes"
                            android:textSize="10sp"
                            android:layout_alignParentRight="true"
                            android:textColor="#fffbf6ff"/>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/statusLayout"
                    android:orientation="vertical"
                    android:layout_below="@id/statusInfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/statusTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="i love my friends and my duuuuuuuuuudes"
                        android:textSize="20dp"
                        />
                    <ImageView
                        android:id="@+id/attachedPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="250sp"
                        android:scaleType="fitXY"
                        android:layout_marginRight="10sp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/default_header"
                        android:visibility="gone"/>
                    <ImageButton
                        android:id="@+id/showMediaButton"
                        android:layout_width="50sp"
                        android:layout_height="40sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/media_play"
                        android:background="#ff15a3f7"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/interactionButtonsLayout"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/statusLayout">
                    <ImageButton
                        android:id="@+id/replyButton"
                        android:layout_width="0dp"
                        android:layout_weight=".30"
                        android:layout_height="match_parent"
                        android:src="@drawable/reply_hover"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/action_butttons" />
                    <ImageButton
                        android:id="@+id/favouriteButton"
                        android:layout_width="0dp"
                        android:layout_weight=".30"
                        android:layout_marginRight="7dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/favorite_hover"
                        android:background="@drawable/action_butttons"/>
                    <ImageButton
                        android:id="@+id/retweetButton"
                        android:layout_width="0dp"
                        android:layout_weight=".30"
                        android:layout_height="match_parent"
                        android:src="@drawable/retweet_hover"
                        android:background="@drawable/action_butttons"
                        />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>