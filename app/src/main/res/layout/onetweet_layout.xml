<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ff15a3f7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/oneTweetLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight=".20"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/profiePictureImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".50"
                android:src="@drawable/ic_launcher"/>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".50"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight=".80"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/statusInfoLayout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/userNameTextView"
                        android:layout_width="0dp"
                        android:layout_weight=".60"
                        android:layout_height="wrap_content"
                        android:text="اخبار الكرة العالمية"
                        android:textSize="20dp"
                        android:gravity="left"
                        android:textColor="#fff7f2ff"
                        android:textIsSelectable="false"
                        android:textStyle="bold" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight=".40"
                        android:layout_height="match_parent"
                        android:gravity="left">
                        <TextView
                            android:id="@+id/timeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4h"
                            android:textSize="10dp"
                            android:layout_alignParentRight="true"
                            android:textColor="#fffbf6ff"
                            android:layout_marginLeft="5dp"/>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/statusLayout"
                    android:layout_below="@id/statusInfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/statusTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="i love my friends and my duuuuuuuuuudes"
                        android:textSize="20dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/interactionButtonsLayout"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/statusLayout">
                    <ImageButton
                        android:id="@+id/replyButton"
                        android:layout_width="0dp"
                        android:layout_weight=".30"
                        android:layout_height="match_parent"
                        android:src="@drawable/reply_hover"
                        android:layout_marginRight="7dp"
                        android:background="#ffffffff" />
                    <ImageButton
                        android:id="@+id/favouriteButton"
                        android:layout_width="0dp"
                        android:layout_weight=".30"
                        android:layout_marginRight="7dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/favorite_hover"
                        android:background="#ffffffff"/>
                    <ImageButton
                        android:id="@+id/retweetButton"
                        android:layout_width="0dp"
                        android:layout_weight=".30"
                        android:layout_height="match_parent"
                        android:src="@drawable/retweet_hover"
                        android:background="#ffffffff"
                        />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>