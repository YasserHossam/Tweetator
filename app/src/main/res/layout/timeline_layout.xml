<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/newTweetLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:layout_gravity="top">
        <EditText
            android:id="@+id/newTweetEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".70"
            android:gravity="top|left"
            android:background="#fffbf6ff" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".30">
            <Button
                android:id="@+id/newTweetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Tweet"
                />
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".70">
        <ListView
            android:id="@+id/tweetsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff45b5d4">
        </ListView>
        <ProgressBar
            android:id="@+id/loadingBar"
            android:visibility="invisible"
            style="@android:style/Widget.ProgressBar.Large.Inverse"
            android:indeterminate="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
        <fragment
            android:name="com.yasser.tweetator.OptionMenuFragment"
            android:id="@+id/menuFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        </fragment>

</LinearLayout>